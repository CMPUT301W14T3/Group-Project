<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="TUNE IN"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/viewtopics_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="How would you like to sort topics?" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewtopics_text"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/otherLocation_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Other Location" />

        <Button
            android:id="@+id/myLocation_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="My Location" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/date_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Date" />

        <Button
            android:id="@+id/pictures_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="With Pictures" />
    </LinearLayout>

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewtopics_text"
        android:layout_toLeftOf="@+id/edit_username"
        android:text="Username:" />

    <Button
        android:id="@+id/name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_username"
        android:layout_alignParentRight="true"
        android:text="Set" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/location_text"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@+id/name_button"
        android:ems="10" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_text"
        android:layout_alignRight="@+id/name_button"
        android:layout_below="@+id/title"
        android:layout_marginTop="16dp"
        android:text="\@" />

    <Button
        android:id="@+id/buttonCache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fav_button"
        android:layout_alignBottom="@+id/fav_button"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_toRightOf="@+id/fav_button"
        android:text="Saved" />

    <Button
        android:id="@+id/fav_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight=".20"
        android:text="Favorites" />

    <Button
        android:id="@+id/buttonTopicList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fav_button"
        android:layout_alignBottom="@+id/fav_button"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_toLeftOf="@+id/fav_button"
        android:text="Topics" />

    <TextView
        android:id="@+id/textViewGoDirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fav_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Go directly to:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>